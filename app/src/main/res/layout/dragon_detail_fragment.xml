                android:layout_height="wrap_content"
                app:heatShield="@{dragonViewModel.dragonDetails.heatShield}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dragonSizeLine"
                tools:text="Ð¢ÐµÐ¿Ð»Ð¾Ð²Ð¾Ð¹ Ñ‰Ð¸Ñ‚: âŒ€ 3.6 Ð¼, PICA-X, ðŸ”¥3000â„ƒ\n Ð¿Ð°Ñ€Ñ‚Ð½ÐµÑ€ Ñ€Ð°Ð·Ñ€Ð°Ð±Ð¾Ñ‚ÐºÐ¸ - NASA" />

            <TextView
                android:id="@+id/crewCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:crewCapacity="@{dragonViewModel.dragonDetails.crewCapacity}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heatShield"
                tools:text="Ð’Ð¼ÐµÑÑ‚Ð¸Ð¼Ð¾ÑÑ‚ÑŒ ÑÐºÐ¸Ð¿Ð°Ð¶Ð°: ðŸ‘¤ðŸ‘¤ðŸ‘¤ðŸ‘¤ðŸ‘¤ðŸ‘¤ðŸ‘¤" />

            <TextView
                android:id="@+id/enginesLabel"
                style="@style/regularText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#591976D2"
                android:text="@string/list_thrusters_string"
                android:textAlignment="center"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/crewCapacity" />

            <ListView
                android:id="@+id/enginesList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/enginesLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/wikiFrame"
            layout="@layout/progress_webview_part" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>