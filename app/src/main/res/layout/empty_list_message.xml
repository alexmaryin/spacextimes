<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/empty_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal" android:orientation="vertical">


        <ImageView
            android:id="@+id/emptyIcon"
            android:layout_width="200dp" android:layout_height="200dp" android:scaleType="fitCenter" app:srcCompat="@drawable/ic_baseline_cloud_off_24"/>
        <TextView
            android:id="@+id/textView"
            style="@style/boldCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emptyListText"
            android:textAlignment="center"
            tools:text="Ничего не найдено"/>
    </LinearLayout>
</layout>